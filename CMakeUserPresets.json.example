{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "user-debug",
      "displayName": "User Debug",
      "description": "User-specific debug configuration",
      "inherits": "debug",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install"
      }
    },
    {
      "name": "user-release",
      "displayName": "User Release",
      "description": "User-specific release configuration",
      "inherits": "release",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install"
      }
    },
    {
      "name": "qt6-debug",
      "displayName": "Qt6 Debug",
      "description": "Debug build with Qt6",
      "inherits": "debug",
      "cacheVariables": {
        "CMAKE_PREFIX_PATH": "/path/to/qt6"
      }
    },
    {
      "name": "qt6-release",
      "displayName": "Qt6 Release",
      "description": "Release build with Qt6",
      "inherits": "release",
      "cacheVariables": {
        "CMAKE_PREFIX_PATH": "/path/to/qt6"
      }
    }
  ]
}
